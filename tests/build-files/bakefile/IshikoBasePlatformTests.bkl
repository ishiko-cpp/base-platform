ishikopath = envvar("ISHIKO_CPP_ROOT");
import $(ishikopath)/base-platform/include/Ishiko/BasePlatform.bkl;
import $(ishikopath)/test-framework/include/Ishiko/TestFramework/Core.bkl;

toolsets = gnu vs2022 vs2019 vs2017;

gnu.makefile = ../gnumake/GNUmakefile;
vs2022.solutionfile = ../vc17/IshikoBasePlatformTests.sln;
vs2019.solutionfile = ../vc16/IshikoBasePlatformTests.sln;
vs2017.solutionfile = ../vc15/IshikoBasePlatformTests.sln;

program IshikoBasePlatformTests : IshikoBasePlatform, IshikoTestFrameworkCore
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++14";
        libs += IshikoTestFrameworkCore IshikoConfiguration IshikoXML IshikoFileSystem IshikoIO IshikoProcess IshikoTime IshikoText IshikoErrors IshikoBasePlatform;
        libs += fmt boost_filesystem;
    }

    if ($(toolset) != gnu)
    {
        cxx-compiler-options = "/utf-8";
    }

    headers
    {
        ../../src/CompilerTests.hpp
        ../../src/OSTests.hpp
    }

    sources
    {
        ../../src/CompilerTests.cpp
        ../../src/main.cpp
        ../../src/OSTests.cpp
    }
}
